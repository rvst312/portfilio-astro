---
interface Props {
	title: string;
	description: string;
}

const { title } = Astro.props;
const { description } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		
		<link rel="icon" href="/img/favicon.svg" />
		<link
		href="https://api.fontshare.com/v2/css?f[]=satoshi@900,700,500,300,400&f[]=rx-100@400&display=swap"
		rel="stylesheet"
		/>
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
		rel="stylesheet"
		integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
		crossorigin="anonymous"
		/>
		
		<script src="https://unpkg.com/scrollreveal"></script>
		
		<script src="../../public/js/script.js"></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
			crossorigin="anonymous"></script>
		<script
			src="https://cdnjs.cloudflare.com/ajax/libs/alpinejs/3.10.2/cdn.js"
		></script>
	</head>
	<body>
		<slot />
	</body>

	<style is:global>
		* {
			color: #fff !important;
			font-family: "Satoshi", sans-serif !important;
			font-family: "RX100", sans-serif;
			overflow-x: hidden;
			text-shadow: 0px 5px 5px rgba(0, 0, 0, 0.3);
			text-decoration: none !important;
			transition: all 0.25s ease-out;
		}

		p {
			font-size: 15px;
			font-weight: 100;
			letter-spacing: 2px;
		}

		body {
			/*background-color: #1c1c1c !important;*/
			background-color: #161616;
			position: absolute;
			inset: 0;
			margin: 0;
			padding: 0;
		}

		html{
			scroll-behavior: smooth;
		}

		button {
			border-radius: 10px;
			box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.3);
		}

		/*--------Hide scrollbar--------*/
		body::-webkit-scrollbar {
			display: none;
			background-color: transparent;
		}

		/*--------scroll 100vh--------*/
		.snap-container {
			overflow: hidden;
		}

		.snap-section {
			/*scroll-snap-align: start;*/
			min-height: 100vh;
			margin-left: 3em;
			margin-right: 3em;
			z-index: 1;
		}

		/*--------Animated background--------*/
		@keyframes rotate {
			0% {
				transform: rotate(0deg);
			}

			100% {
				transform: rotate(360deg);
			}
		}

		.gradient {
			--size: 800px;
			--speed: 5s;
			--easing: cubic-bezier(0.8, 0.2, 0.2, 0.8);
			width: var(--size);
			height: var(--size);
			filter: blur(calc(var(--size) / 5));
			background-image: linear-gradient(
				rgba(55, 235, 169, 0.85),
				#5b37eb
			);
			animation: rotate var(--speed) var(--easing) alternate infinite;
			border-radius: 30% 70% 70% 30%/30% 30% 70% 70%;
			z-index: -1;
		}

		@media (min-width: 720px) {
			.gradient {
				--size: 1000px;
			}
		}
		
		#divSeguidor {
			position: absolute;
			width: 600px;
			height: 600px;
			z-index: 0;
		}
	</style>
</html>
